# Fantasy Sports Game Environment Variables
# Copy this file to .env and fill in your values

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================

# Supabase Project URL
# Get this from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (Public - safe for frontend)
# Get this from: Supabase Dashboard > Project Settings > API > anon public
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (Secret - backend only!)
# Get this from: Supabase Dashboard > Project Settings > API > service_role
# WARNING: Never expose this key in frontend code!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# SERVER CONFIGURATION
# =====================================================

# Node environment
NODE_ENV=development

# Server port
PORT=3001

# API Base URL
API_BASE_URL=http://localhost:3001

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================

# React App API URL
REACT_APP_API_URL=http://localhost:3001

# =====================================================
# AUTHENTICATION (Optional)
# =====================================================

# JWT Secret for custom auth (if not using Supabase Auth)
# JWT_SECRET=your-jwt-secret-here

# =====================================================
# EXTERNAL SERVICES (Optional)
# =====================================================

# Cricket API for live scores (if applicable)
# CRICKET_API_KEY=your-api-key-here
# CRICKET_API_URL=https://api.example.com

# =====================================================
# FEATURE FLAGS
# =====================================================

# Enable mock mode when Supabase is not configured
REACT_APP_ENABLE_MOCK_MODE=true

# Enable debug logging
DEBUG=false
